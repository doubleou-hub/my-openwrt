# ===== 基础架构 =====
CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y
CONFIG_TARGET_x86_64_Generic=y
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-ssl=y

# ===== BCM94350 无线网卡驱动（BCM4350）=====
CONFIG_PACKAGE_kmod-brcmfmac=y
CONFIG_PACKAGE_kmod-brcmfmac-pcie=y
CONFIG_PACKAGE_firmware-brcm80211=y
CONFIG_PACKAGE_wpad-openssl=y

# ===== 插件商店（后续扩展用）=====
CONFIG_PACKAGE_luci-app-store=y
CONFIG_PACKAGE_luci-lib-ipkg=y
CONFIG_PACKAGE_luci-lib-jsonc=y
CONFIG_PACKAGE_rpcd=y
CONFIG_PACKAGE_rpcd-mod-luci=y
CONFIG_PACKAGE_uhttpd=y
CONFIG_PACKAGE_uhttpd-mod-ubus=y
CONFIG_PACKAGE_uhttpd-mod-lua=y

# ===== 📊 流量统计（实时监控+历史记录）=====
CONFIG_PACKAGE_luci-app-nlbwmon=y      # 网络流量监控（带图表）
CONFIG_PACKAGE_nlbwmon=y
CONFIG_PACKAGE_iptables-mod-conntrack-extra=y
CONFIG_PACKAGE_iptables-mod-ipopt=y

# ===== 🛡️ 行为规则（家长控制+访问管理）=====
CONFIG_PACKAGE_luci-app-accesscontrol=y # 设备管控：限时/限网址/限应用
CONFIG_PACKAGE_accesscontrol=y
CONFIG_PACKAGE_luci-app-parentalcontrol=y # 传统家长控制（双保险）
CONFIG_PACKAGE_parentalcontrol=y

# ===== 🌐 其他高频实用插件 =====
CONFIG_PACKAGE_luci-app-upnp=y          # 内网设备自动端口映射（NAS/游戏机必备）
CONFIG_PACKAGE_miniupnpd=y
CONFIG_PACKAGE_luci-app-ddns=y          # 动态域名（外网访问）
CONFIG_PACKAGE_ddns-scripts=y
CONFIG_PACKAGE_luci-app-samba4=y        # SMB文件共享（J1900当NAS超实用！）
CONFIG_PACKAGE_samba4-server=y
CONFIG_PACKAGE_luci-app-adblock=y       # 广告过滤（需首次启动后启用）
CONFIG_PACKAGE_luci-app-opkg=y
CONFIG_PACKAGE_luci-compat=y
